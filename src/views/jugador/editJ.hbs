<div class="container p-4">
    <div class="col-md-4 mx-auto">
        <div class="card-body">
            <form action="/jugador/editJ/{{IdJugador}}" method="post">
                <div class="form-group">
                    <input type="text" value="{{jugador.JugNombre}}" class="form-control" name="JugNombre" placeholder="Nombre">
                </div>
                <div class="form-group">
                    <input type="text" value="{{jugador.JugApellido}}" class="form-control" name="JugApellido" placeholder="Apellidos" >
                </div>
                <div class="form-group">
                    <input type="number" value="{{jugador.JugDocumento}}" class="form-control" name="JugDocumento" placeholder="Documento" >
                </div>
                <div class="form-group">
                    <input type="number" value="{{jugador.JugTelefono}}" class="form-control" name="JugTelefono" placeholder="Telefono apoderado" >
                </div>
                <div class="form-group">
                    <input type="email" value="{{jugador.JugCorreo}}" class="form-control" name="JugCorreo" placeholder="email apoderado" >
                </div>
                <div class="form-group">
                    <button class="btn btn-warning btn-block">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>